#include <stdio.h>

int main() {
	int a = 0;
	int b = 0;
	int c = 0;

	printf(" first is input  : ");
	scanf_s("%d", &a); fflush(stdin);
	printf(" second is input : ");
	scanf_s("%d", &b); fflush(stdin);

	printf(" add : %d + %d = %d \n", a, b, a + b);
	printf(" sub : %d - %d = %d \n", a, b, a - b);
	printf(" mul : %d * %d = %d \n", a, b, a * b);
        printf(" div : %d / %d = %d \n", a, b, a / b);
	system("pause");
	return 0;
}
